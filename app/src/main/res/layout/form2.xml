<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"


        android:background="#212121">

        <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
            android:id="@+id/progressBarCircularIndeterminate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"

            android:background="#1E88E5" />
        <TextView
            android:layout_width="235dp"
            android:layout_height="match_parent"
            android:typeface="sans"
            android:text="Sign up"

            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"

            android:textSize="30sp"


            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"/>
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="#212121"
            android:src="@drawable/next"
            android:id="@+id/even1" />






    </LinearLayout>



    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="#212121"
        app:met_primaryColor="#4CAF50"
        app:met_errorColor="#D32F2F"
        app:met_hideUnderline="true"
        app:met_iconLeft="@drawable/username"
        app:met_singleLineEllipsis="true"
        app:met_clearButton="true"

        app:met_minCharacters="4"
        app:met_maxCharacters="20"


        android:layout_margin="10dp"
        android:textSize="25sp"
        fontPath="fonts/roboto.ttf"
        android:hint="Guardian Name"
        android:id="@+id/usrs1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/imageView4"
        android:layout_gravity="center_horizontal"
        android:contentDescription="imngbtn2" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="#212121"
        app:met_primaryColor="#4CAF50"
        app:met_errorColor="#D32F2F"
        app:met_hideUnderline="true"
        app:met_iconLeft="@drawable/phne"
        app:met_singleLineEllipsis="true"
        app:met_clearButton="true"
        android:layout_above="@+id/usrs1"

        app:met_minCharacters="10"
        app:met_maxCharacters="10"


        android:layout_margin="10dp"
        android:textSize="25sp"
        fontPath="fonts/roboto.ttf"
        android:hint="Guardian Number"
        android:inputType="number"
        android:id="@+id/usrs2"
        />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/imageView5"
        android:layout_gravity="center_horizontal"
        android:contentDescription="imngbtn3" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="#212121"
        app:met_primaryColor="#4CAF50"
        app:met_errorColor="#D32F2F"
        app:met_hideUnderline="true"
        app:met_iconLeft="@drawable/fb"
        app:met_singleLineEllipsis="true"
        app:met_clearButton="true"


        app:met_minCharacters="6"
        app:met_maxCharacters="20"


        android:layout_margin="10dp"
        android:textSize="25sp"
        fontPath="fonts/roboto.ttf"
        android:hint="Facebook ID"
        android:id="@+id/usrs3"
        />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/imageView6"
        android:layout_gravity="center_horizontal"
        android:contentDescription="imngbtn3" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="#212121"
        app:met_primaryColor="#4CAF50"
        app:met_errorColor="#D32F2F"
        app:met_hideUnderline="true"
        app:met_iconLeft="@drawable/fb"
        app:met_singleLineEllipsis="true"
        app:met_clearButton="true"
        android:inputType="textPassword"


        app:met_minCharacters="6"
        app:met_maxCharacters="20"


        android:layout_margin="10dp"
        android:textSize="25sp"
        fontPath="fonts/roboto.ttf"
        android:hint="Facebook Password"
        android:id="@+id/usrs4"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/imageView9"
        android:layout_gravity="center_horizontal"
        android:contentDescription="imngbtn4" />



</LinearLayout>