<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"


        android:background="#212121">

        <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
            android:id="@+id/progressBarCircularIndeterminate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"

            android:background="#1E88E5" />
        <TextView
            android:layout_width="235dp"
            android:layout_height="match_parent"
            android:typeface="sans"
            android:text="Sign up"

            android:id="@+id/signupbut"

            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"

            android:textSize="30sp"


            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="#212121"
            android:src="@drawable/next"
            android:id="@+id/nextfrm1" />









        </LinearLayout>



    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="#212121"
        app:met_primaryColor="#4CAF50"
        app:met_errorColor="#D32F2F"
        app:met_hideUnderline="true"
        app:met_iconLeft="@drawable/username"
        app:met_singleLineEllipsis="true"
        app:met_clearButton="true"

        app:met_minCharacters="5"
        app:met_maxCharacters="20"


        android:layout_margin="10dp"
        android:textSize="25sp"
        fontPath="fonts/roboto.ttf"
        android:hint="Username"
        android:id="@+id/usr1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/imageView4"
        android:layout_gravity="center_horizontal"
        android:contentDescription="imngbtn" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="#212121"
        app:met_primaryColor="#4CAF50"
        app:met_errorColor="#D32F2F"
        app:met_hideUnderline="true"
        app:met_iconLeft="@drawable/phne"
        app:met_singleLineEllipsis="true"
        app:met_clearButton="true"
        android:layout_above="@+id/usr1"
        android:inputType="number"
        app:met_minCharacters="10"
        app:met_maxCharacters="10"


        android:layout_margin="10dp"
        android:textSize="25sp"
        fontPath="fonts/roboto.ttf"
        android:hint="Phone Number"
        android:id="@+id/usr2"
 />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/imageView3"
        android:layout_gravity="center_horizontal" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="#212121"
        app:met_primaryColor="#4CAF50"
        app:met_errorColor="#D32F2F"
        app:met_hideUnderline="true"
        app:met_iconLeft="@drawable/hme"
        app:met_singleLineEllipsis="true"
        app:met_clearButton="true"
        android:layout_above="@+id/usr2"

        app:met_minCharacters="6"
        app:met_maxCharacters="25"


        android:layout_margin="10dp"
        android:textSize="25sp"
        fontPath="fonts/roboto.ttf"
        android:hint="Address Line 1"
        android:id="@+id/usr3"
        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="#212121"
        app:met_primaryColor="#4CAF50"
        app:met_errorColor="#D32F2F"
        app:met_hideUnderline="true"
        app:met_iconLeft="@drawable/hme"
        app:met_singleLineEllipsis="true"
        app:met_clearButton="true"
        android:layout_above="@+id/usr3"

        app:met_minCharacters="6"
        app:met_maxCharacters="25"


        android:layout_margin="10dp"
        android:textSize="25sp"
        fontPath="fonts/roboto.ttf"
        android:hint="Address Line 2"
        android:id="@+id/usr4"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/imageView1"
        android:layout_gravity="center_horizontal" />


</LinearLayout>