<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">






    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"


        android:background="#212121">

        <ImageView
            android:id="@+id/rminate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:src="@drawable/topic"




            />
        <TextView
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:typeface="sans"
            android:text="Pickle!"

            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"

            android:textSize="30sp"


            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"/>


    </LinearLayout>










<LinearLayout
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:layout_height="180dp">




        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pio"
            android:layout_margin="10dp"


            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:border_width="1dp"

            app:border_color="#b6b6b6"
            android:src="@drawable/parsons"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="210dp">
    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">
    <TextView


        android:layout_width="wrap_content"
        android:text="@string/pasample"
        android:textColor="#727272"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:textSize="18sp"
        android:id="@+id/last2"
        android:layout_height="210dp" />
    </ScrollView>


</LinearLayout>



</LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#b6b6b6"/>

    <TextView

        android:layout_width="match_parent"
        android:text="   Samiran Roy needs your help!"


        android:textColor="#FF5252"
        android:background="#ffffff"
        android:gravity="center"
        android:textSize="25sp"
        android:id="@+id/last1"
        android:layout_height="45sp" />


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
        android:layout_marginTop="20dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="90dp"
        android:id="@+id/t1"
        android:gravity="center"

        android:textSize="15dp"
        android:layout_height="match_parent"
        android:text="Call\nUser"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/butres"
            android:layout_height="70dp"
            android:id="@+id/calluser" />
        <ImageView
            android:layout_width="70dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/msg"
            android:layout_height="70dp"
            android:id="@+id/sms" />


        <TextView
            android:layout_width="90dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:id="@+id/t2"

            android:textSize="15dp"
            android:layout_height="match_parent"
            android:text="Send\nMessage"/>






    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"

            android:gravity="center"
            android:id="@+id/t3"
            android:textSize="15dp"
            android:layout_height="match_parent"
            android:text="Inform\nGuardian"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/guard"
            android:layout_height="70dp"
            android:id="@+id/guardnum" />
        <ImageView
            android:layout_width="70dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/maptrack"
            android:layout_height="70dp"
            android:id="@+id/maps" />


        <TextView
            android:layout_width="90dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:id="@+id/t4"

            android:textSize="15dp"
            android:layout_height="match_parent"
            android:text="Track\nLocation"/>






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:id="@+id/t5"

            android:gravity="center"

            android:textSize="15dp"
            android:layout_height="match_parent"
            android:text="User\nDetails"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/detail"
            android:layout_height="70dp"
            android:id="@+id/detail" />
        <ImageView
            android:layout_width="70dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/share"
            android:layout_height="70dp"
            android:id="@+id/sharing" />


        <TextView
            android:layout_width="90dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"

            android:id="@+id/t6"
            android:textSize="15dp"
            android:layout_height="match_parent"
            android:text="Share\nPickle"/>






    </LinearLayout>







</LinearLayout>