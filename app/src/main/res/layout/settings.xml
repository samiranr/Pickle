<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:weightSum="1">






    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"


        android:background="#212121">

        <ImageView
            android:id="@+id/rminate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:src="@drawable/topic"



            />
        <TextView
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:typeface="sans"
            android:text="Settings"

            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"

            android:textSize="30sp"


            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"/>


        <ImageButton
            android:layout_width="40dp"

            android:layout_height="40dp"
            android:background="#212121"
            android:src="@drawable/check"
            android:layout_gravity="center"

            android:id="@+id/tick" />





    </LinearLayout>


    <com.gc.materialdesign.views.ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sheldon"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/parsons"

        app:border_width="2dp"
        app:border_color="#9E9E9E"/>




    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/gg1"
        android:layout_gravity="center_horizontal"
        android:contentDescription="imngbtn" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="#212121"
        app:met_primaryColor="#4CAF50"
        app:met_errorColor="#D32F2F"
        app:met_hideUnderline="true"
        app:met_iconLeft="@drawable/phne"
        app:met_singleLineEllipsis="true"
        app:met_clearButton="true"

        android:inputType="number"
        app:met_minCharacters="10"
        app:met_maxCharacters="10"


        android:layout_margin="10dp"
        android:textSize="25sp"
        fontPath="fonts/roboto.ttf"
        android:hint="Phone Number"
        android:id="@+id/ggphne"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/gg2"
        android:layout_gravity="center_horizontal" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="#212121"
        app:met_primaryColor="#4CAF50"
        app:met_errorColor="#D32F2F"
        app:met_hideUnderline="true"
        app:met_iconLeft="@drawable/hme"
        app:met_singleLineEllipsis="true"
        app:met_clearButton="true"


        app:met_minCharacters="6"
        app:met_maxCharacters="25"


        android:layout_margin="10dp"
        android:textSize="25sp"
        fontPath="fonts/roboto.ttf"
        android:hint="Address Line 1"
        android:id="@+id/ggadd1"
        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/gg3"
        android:layout_gravity="center_horizontal" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="#212121"
        app:met_primaryColor="#4CAF50"
        app:met_errorColor="#D32F2F"
        app:met_hideUnderline="true"
        app:met_iconLeft="@drawable/hme"
        app:met_singleLineEllipsis="true"
        app:met_clearButton="true"


        app:met_minCharacters="6"
        app:met_maxCharacters="25"


        android:layout_margin="10dp"
        android:textSize="25sp"
        fontPath="fonts/roboto.ttf"
        android:hint="Address Line 2"
        android:id="@+id/ggadd2"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/gg4"
        android:layout_gravity="center_horizontal" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_baseColor="#212121"
                app:met_primaryColor="#4CAF50"
                app:met_errorColor="#D32F2F"
                app:met_hideUnderline="true"
                app:met_iconLeft="@drawable/username"
                app:met_singleLineEllipsis="true"
                app:met_clearButton="true"

                app:met_minCharacters="4"
                app:met_maxCharacters="20"


                android:layout_margin="10dp"
                android:textSize="25sp"
                fontPath="fonts/roboto.ttf"
                android:hint="Guardian Name"
                android:id="@+id/ggg" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B6B6B6"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/gg5"
                android:layout_gravity="center_horizontal"
                android:contentDescription="imngbtn2" />






            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_baseColor="#212121"
                app:met_primaryColor="#4CAF50"
                app:met_errorColor="#D32F2F"
                app:met_hideUnderline="true"
                app:met_iconLeft="@drawable/phne"
                app:met_singleLineEllipsis="true"
                app:met_clearButton="true"


                app:met_minCharacters="10"
                app:met_maxCharacters="10"


                android:layout_margin="10dp"
                android:textSize="25sp"
                fontPath="fonts/roboto.ttf"
                android:hint="Guardian Number"
                android:inputType="number"
                android:id="@+id/ggnum"
                />



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B6B6B6"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/gg6"
                android:layout_gravity="center_horizontal"
                android:contentDescription="imngbtn3" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_baseColor="#212121"
                app:met_primaryColor="#4CAF50"
                app:met_errorColor="#D32F2F"
                app:met_hideUnderline="true"
                app:met_iconLeft="@drawable/fb"
                app:met_singleLineEllipsis="true"
                app:met_clearButton="true"


                app:met_minCharacters="6"
                app:met_maxCharacters="20"


                android:layout_margin="10dp"
                android:textSize="25sp"
                fontPath="fonts/roboto.ttf"
                android:hint="Facebook ID"
                android:id="@+id/ggfid"
                />



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B6B6B6"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/gg7"
                android:layout_gravity="center_horizontal"
                android:contentDescription="imngbtn3" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_baseColor="#212121"
                app:met_primaryColor="#4CAF50"
                app:met_errorColor="#D32F2F"
                app:met_hideUnderline="true"
                app:met_iconLeft="@drawable/fb"
                app:met_singleLineEllipsis="true"
                app:met_clearButton="true"
                android:inputType="textPassword"


                app:met_minCharacters="6"
                app:met_maxCharacters="20"


                android:layout_margin="10dp"
                android:textSize="25sp"
                fontPath="fonts/roboto.ttf"
                android:hint="Facebook Password"
                android:id="@+id/ggfpass"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B6B6B6"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/gg8"
                android:layout_gravity="center_horizontal"
                android:contentDescription="imngbtn4" />
















        </LinearLayout>

    </com.gc.materialdesign.views.ScrollView>



</LinearLayout>